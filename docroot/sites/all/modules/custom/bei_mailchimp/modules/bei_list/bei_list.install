/**
 * Implementation of hook_uninstall().
 * Automatically drops tables in hook_schema.
 */
function bei_list_uninstall() {

  // remove variables
  db_query('DELETE FROM {variable} WHERE name like :type', array(':type' => 'bei_list_%'));
}

